<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:background="@drawable/istra"/>
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_alignBottom="@+id/view_pager"
                android:layout_centerInParent="true"
                android:layout_width="fill_parent"
                android:layout_height="40dp"/>

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="0.01">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="25sp"
            android:textColor="@color/colorGreyishBrown"
            android:layout_marginStart="20dp"
            android:text="Umag Center"
            android:id="@+id/cityName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99€"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:id="@+id/name"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="per night"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView4"
            android:layout_marginEnd="20dp"
            android:layout_alignBottom="@+id/name"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="0.01"
        >

        <ImageView
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/where"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="202 Cummerata Avenue Apt. 964"
            android:id="@+id/textView5"
            android:textSize="12sp"
            android:textColor="@color/colorGreyishBrown"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginStart="23dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descirption"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/textView6" />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorWarmGrey"
        android:id="@+id/line4" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="17dp"
            android:id="@+id/rooms2"
            android:layout_marginStart="30dp"
            android:background="@drawable/room"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="17dp"
            android:id="@+id/beds2"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/rooms2"
            android:background="@drawable/bed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 rooms"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:id="@+id/roomAmount2"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/rooms2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 beds"
            android:id="@+id/bedAmount2"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:layout_marginStart="35dp"
            android:layout_below="@+id/beds2"
            android:layout_toEndOf="@+id/roomAmount2"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorWarmGrey"/>

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorWhiteButton"
        android:text="Have a question? Let’s chat"
        android:id="@+id/button1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:text="Book now"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:clickable="true" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>
</LinearLayout>